@{
    Layout = null;}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link rel="stylesheet" runat="server" media="screen" href="~/Content/css/base.css" />
    <link rel="stylesheet" runat="server" media="screen" href="~/Content/css/registration_forms.css" />
    <link rel="stylesheet" runat="server" media="screen" href="~/Content/css/sidebar.css" />
</head>
<body>
    @using (Html.BeginForm())
    {
        <section class="login-block">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 login-section">
                        <h2 class="text-center">Login</h2>
                        <form class="login-form" method="post">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="text" id="email" name="email" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input type="text" id="username" name="username" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label class="password">Password</label>
                                <input type="password" name="password" id="password" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label class="password-confirm">Password</label>
                                <input type="password" name="password-confirm" id="password-confirm" class="form-control" required />
                            </div>
                            <div class="form-check">
                                <button type="submit" class="btn btn-login float-right">Register</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-8 banner-photo">
                        <div class="banner-text">
                            <h2>Register to start working with your team</h2>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
</body>
</html>

